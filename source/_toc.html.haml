
%h1 Table of Contents

%ul.categories
  - pages_by_category.each do |category, pages|
    %li.category
      = link_to category.titlecase, "##{category}"

    - unless pages.empty?
      %ul.pages
        - pages.each do |page|
          %li.page
            = link_to page.data["title"], "##{page.data["title"].underscore.gsub(' ', '_')}"
