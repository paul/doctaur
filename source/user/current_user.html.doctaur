
api :get, "/user" do |api|

  api.title = "Retrieve current user"
  api.response_content = :user

  api.requires :authentication

  api.desc = <<-DESC
    Retrives public data for the currently logged in user.
  DESC

  api.example :curl, <<-EX
    curl -H "Authentication: token {{token}}" https://api.github.com/user
  EX

  api.example :ruby, <<-EX
    @github.current_user
  EX

end

